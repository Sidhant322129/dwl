#!/bin/bash
# Script 38

read -p "Enter login name: " user
line=$(grep "^$user:" /etc/passwd)

if [ -z "$line" ]; then
    echo "User not found"
    exit 1
fi

IFS=":" read uname passwd uid gid fullname home shell <<< "$line"

echo "User Information:"
echo "Username : $uname"
echo "User ID  : $uid"
echo "Group ID : $gid"
echo "Full Name: $fullname"
echo "Home Dir : $home"
echo "Shell    : $shell"


