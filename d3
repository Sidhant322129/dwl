39

#!/bin/bash
# Script 39

PASSWORD="admin123"
attempts=0

while [ $attempts -lt 3 ]; do
    read -sp "Enter password: " pass
    echo
    if [ "$pass" == "$PASSWORD" ]; then
        echo "Access Granted!"
        while true; do
            echo "Menu:"
            echo "1. Number of users logged in"
            echo "2. Calendar of current month"
            echo "3. Current date (dd/mm/yyyy)"
            echo "4. Exit"
            read -p "Enter choice: " ch
            case $ch in
                1) who | wc -l ;;
                2) cal ;;
                3) date +"%d/%m/%Y" ;;
                4) exit 0 ;;
                *) echo "Invalid choice" ;;
            esac
        done
    else
        echo "Wrong password!"
        attempts=$((attempts + 1))
    fi
done

echo "Access Denied!"