32

#!/bin/bash
# Script 32

echo -n "Enter directory name: "
read dir

if [ ! -d "$dir" ]; then
    echo "Invalid directory"
    exit 1
fi

curr_count=$(ls -1 | wc -l)
dir_count=$(ls -1 "$dir" | wc -l)

echo "Current directory has $curr_count files"
echo "$dir has $dir_count files"

if [ $curr_count -gt $dir_count ]; then
    diff=$((curr_count - dir_count))
    echo "Current directory has $diff more files"
elif [ $dir_count -gt $curr_count ]; then
    diff=$((dir_count - curr_count))
    echo "$dir has $diff more files"
else
    echo "Both have equal number of files"
fi

