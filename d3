#!/bin/bash
# Script 29

sum=0
echo "Non-directory files in current directory:"
for file in *; do
    if [ -f "$file" ]; then
        echo "$file"
        size=$(stat -c%s "$file")
        sum=$((sum + size))
    fi
done
echo "Total size of non-directory files: $sum bytes"

