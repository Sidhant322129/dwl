#!/bin/bash
# Script 31

bar1=$1
bar2=$2

if [ ! -d "$bar1" ] || [ ! -d "$bar2" ]; then
    echo "Usage: $0 dir1 dir2"
    exit 1
fi

for file in "$bar1"/*; do
    fname=$(basename "$file")
    if [ -f "$bar2/$fname" ]; then
        rm "$bar2/$fname"
        echo "Deleted $bar2/$fname"
    fi
done

